{
  "name": "umbraco-audit",
  "version": "0.1.0",
  "description": "CLI tool to audit and estimate upgrade effort for Umbraco 13 LTS to Umbraco 17 LTS migrations",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "umbraco-audit": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check . --write"
  },
  "keywords": [
    "umbraco",
    "upgrade",
    "audit",
    "cli",
    "migration"
  ],
  "author": "Lee Mills",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "fast-glob": "^3.3.0",
    "fast-xml-parser": "^5.3.4",
    "ignore": "^7.0.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/node": "^22.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
